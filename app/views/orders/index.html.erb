<%= render 'shared/navbar_colored' %>
<div class="container">
  <div class="orders col-6" >
    <h4 style="margin-top:100px;">Mes commandes:</h4>
    <% if current_user.admin %>
        <div class="all-orders d-flex justify-content-left">
          <ul>
            <% @all_orders.reverse.each do |order| %>
              <li><p><%= link_to "Commande #{order.id}", order_path(order) %></p></li>
            <% end %>
          </ul>
<!--         <div class="orders-date"> -->
          <ul>
            <% @all_orders.reverse.each do |order| %>
              <li><p><%= order.created_at.strftime("%d %b. %Y") %></p></li>
            <% end %>
          </ul>
        </div>
        <!-- </div> -->
    <% else %>
      <% @orders.each do |order| %>
        <ul>
          <li><%= link_to order.created_at, order_path(order) %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
</div>


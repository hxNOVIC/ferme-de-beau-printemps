<h1>Votre Panier ! (<%= pluralize(@cart_products_with_qty.size, 'Article') %> )</h1>
<div class="col-8 offset-4">
<table>
    <thead>
        <tr>
            <th class="cart-table">Produits</th>
            <th class="cart-table">Prix</th>
            <th class="cart-table">Quantité</th>
            <th class="cart-table">Sous-total</th>
        </tr>
    </thead>
<% @cart_products_with_qty.each do |array| %>
  <% product = array[0] %>
  <% qty = array[1] %>
    <tbody>
        <tr>
            <td class="cart-table"><%= product.name %></td>
            <td><%= product.price %>€</td>
            <td><%= qty %></td>
            <td><%= product.price * qty.to_i %>€</td>
            <td class="cart-table-plus-moins"><%= link_to '+', add_to_cart_path(product), method: :put %></td>
            <td class="cart-table-plus-moins"><%= link_to '-', remove_one_cart_path(product), method: :put %></td>
            <td><%= link_to 'Remove', remove_from_cart_path(product), method: :put %></td>
        </tr>




<% end %>
    <tr>
      <td colspan="3"><h5>Total</h5></td>
      <td><h5><%= @cart_total %>€</h5></td>
    </tr>
    </tbody>
</table>

<%= form_tag orders_path do %>
  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
<% end %>

</div>



<%= render 'shared/navbar_colored' %>
<div class="container" style="margin-top: 100px;">
  <h2 class="text-center">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs col-6 offset-3">
      <%= f.input :email, label: "Mail:",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: "Mot de passe:",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <p class="text-center"><%= f.button :submit, "SE CONNECTER", class: "cart-btn" %></p>
    </div>
  <% end %>

  <p class="text-center"><%= render "devise/shared/links" %></p>
</div>

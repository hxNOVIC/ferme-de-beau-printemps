<div style="margin-top: 100px; min-height: 80vh;" class="container">
    <p style="margin-top: 15px;"><strong><%= @products.size %> Produits dans notre boutique actuellement :</strong></p>

  <div class="cards">
    <% @products.each do |product| %>
      <%= link_to product_path(product) do %>
        <div data-aos="fade-up">
        <div class="card-category" style="text-decoration: none; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= product.image_url %>);">
        <div class="product-name">
          <%= product.name %>
        </div>
        <div class="product-place">
        </div>
        <div class="product-price text-right">
          <span>Acompte: <%= humanized_money_with_symbol(product.price) %></span>
        </div>
        </div>
    </div>
      <% end %>
    <% end %>
  </div>



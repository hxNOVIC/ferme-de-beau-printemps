<div class="navbar navbar-expand-sm navbar-light navbar-colored">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'Logo_tiroir_terroir.png', id: "logo" %>
    <% end %>

  <div style="width: 40%">
    <%= link_to root_path do %>
      <div><h5 class="text-center title">FERME DE BEAU PRINTEMPS</h5></div>
    <% end %>
    <div class="tabs d-flex justify-content-around">
      <%= link_to 'Nos Produits', categories_path %>
      <%= link_to 'Zone de Livraison', delivery_path %>
      <%= link_to 'Notre Élevage', delivery_path %>
    </div>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <div class="d-flex align-item-center img-right">
        <li class="nav-item">
          <%= link_to orders_path do %>
            <%= image_tag("order.png")%>
          <% end %>
        </li>
        <li class="nav-item active">
          <%= link_to cart_path do %>
            <%= image_tag "shopping-cart.png" %>
          <% end %>
        </li>
        <% if current_user.admin %>
          <li class="nav-item dropdown">
            <%= image_tag "list.png", class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", "#", class: "dropdown-item" %>
              <%= link_to "Nos produits", "#", class: "dropdown-item" %>
              <% if current_user.admin %>
                <%= link_to "Modifier contacts", edit_contact_path(Contact.first), class: "dropdown-item" %>
                <%= link_to "Nouveau produit", new_product_path, class: "dropdown-item" %>
                <%= link_to "Nouvelle catégorie", new_category_path, class: "dropdown-item" %>
                <%= link_to "Nouvelle recette", new_recipe_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
        <% end %>
      </div>
      <% else %>
        <li class="nav-item" style="color: white;">
          <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= render 'shared/navbar_colored' %>
<div style="margin-top: 100px;" class="container">
  <h2 class="text-center" style="margin-top:100px;">Modifier un produit.</h2>
  <div class="form-inputs col-6 offset-3">
    <%= simple_form_for @recipe do |f| %>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :description, label: "Description ( \"\\\" entre chaque étape )" %>
    <%= f.input :capacity, label: "Pour combien de personnes" %>
    <%= f.input :difficulty, label: "Difficulté" %>
    <%= f.input :prep_time, label: "Temps de préparation" %>
    <%= f.input :cook_time, label: "Temps de cuisson" %>
    <%= f.input :ingredients, label: "Ingrédients ( ex : \"280g de beurre,2 steaks,1 oignon\" )" %>
</div>
  <div class="form-actions">
    <p class="text-center"><%= f.button :submit, "MODIFIER", class: "cart-btn" %></p>
  </div>
  <% end %>
</div>
